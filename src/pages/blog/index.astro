---
import {getCollection} from "astro:content";
import FormattedDate from "../../components/FormattedDate.tsx";
import Layout from "../../layouts/Layout.astro";

const posts = (await getCollection("blog")).sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<Layout title="Aman's Blog 🚴‍♂️" description="amanmavai.in">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
    <h2 class="font-nunito text-4xl text-center col-span-2 font-semibold text-blue-500">Aman's Blog</h2>
    {
      posts.map((post) => (
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <div class="p-6">
            <h4 class="text-xl font-semibold mb-2">{post.data.title}</h4>
            <p class="text-sm text-gray-600 mb-4">
              <FormattedDate date={post.data.pubDate} />
            </p>
            <a href={`/blog/${post.slug}/`} class="text-blue-500 hover:text-blue-700 transition duration-300">
              Read More →
            </a>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
