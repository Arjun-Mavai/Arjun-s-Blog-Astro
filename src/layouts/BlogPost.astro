---
import type {CollectionEntry} from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.tsx";

type Props = CollectionEntry<"blog">["data"];

const {title, description, pubDate, updatedDate} = Astro.props;
---

<html lang="en" class="h-full bg-gradient-to-r from-gray-100 to-white">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="flex min-h-full flex-col">
    <Header />
    <main class="flex-1 w-full py-12 px-6">
      {/* <!-- Main content --> */}
      <article class="prose lg:prose-xl max-w-5xl container mx-auto shadow-lg rounded-lg overflow-hidden">
        <div class="bg-gray-800 p-6 text-white">
          <div class="flex flex-col items-end gap-4">
            <div class="text-4xl font-bold text-white">{title}</div>
            <div class="text-sm">
              <FormattedDate date={pubDate} className="text-white" />
              {
                updatedDate && (
                  <span class="ml-2 text-base">
                    Last updated on <FormattedDate date={updatedDate} />
                  </span>
                )
              }
            </div>
          </div>
          <hr class="my-4 border-gray-600" />
        </div>
        <div class="content p-6 bg-white">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
